<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.FloatingButton" parent="Widget.Material3.FloatingActionButton.Large.Surface">
        <item name="android:textSize">@dimen/start_dialog_inner_item_text_size</item>
        <item name="cornerSize">@dimen/start_dialog_inner_item_corner_size</item>
    </style>

    <style name="Widget.App.FloatingButton.WithEndDrawable">
        <item name="drawableTint">?attr/colorPrimary</item>
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="Widget.App.FloatingButton.WithEndDrawable.NoCorners">
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="BounceAnimation">
        <item name="android:windowEnterAnimation">@anim/bounce</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SliderStyle">
        <item name="thumbColor">@android:color/white</item>
        <item name="haloColor">@color/secondary</item>
        <item name="haloRadius">14dp</item>
        <item name="thumbRadius">12dp</item>
        <item name="trackColorInactive">@color/on_primary</item>
        <item name="tickColorInactive">@color/on_primary</item>
        <item name="trackHeight">3dp</item>
    </style>

    <style name="SideMenuOutlinedButton" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/timer_circle_progress</item>
    </style>

    <style name="StartWorkoutItemShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">36dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
    </style>

    <style name="StartWorkoutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/start_dialog_cardView_height</item>
        <item name="android:layout_marginRight">@dimen/start_dialog_item_margins</item>
        <item name="android:layout_marginLeft">@dimen/start_dialog_item_margins</item>
        <item name="android:layout_marginBottom">@dimen/start_dialog_item_margins</item>
        <item name="cardBackgroundColor">@color/primary_container</item>
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearanceOverlay">@style/StartWorkoutItemShape</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="StartWorkoutItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/start_dialog_item_title_text_size</item>
        <item name="android:textColor">@color/on_primary_container</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DrawerLayoutInnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="drawableTint">@color/on_surface</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerLayoutInnerTitle" parent="DrawerLayoutInnerItem">
        <item name="android:layout_height">40dp</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_down</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="DrawerLayoutInnerTitleRed" parent="DrawerLayoutInnerTitle">
        <item name="drawableEndCompat">@null</item>
        <item name="drawableTint">@color/error</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="MainButtonActionSecondaryButton">
        <item name="android:layout_width">132dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">15sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:maxEms">16</item>
        <item name="strokeColor">@color/main_button_action_outline</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="backgroundTint">@color/secondary_container</item>
        <item name="android:textColor">@color/on_secondary_container</item>
    </style>

    <style name="MainButtonActionPrimaryButton" parent="MainButtonActionSecondaryButton">
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="backgroundTint">@color/primary_container</item>
        <item name="android:textColor">@color/on_primary_container</item>
    </style>


    <style name="MainButtonActionButtonOutlined">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/secondary_container</item>
        <item name="backgroundTint">@color/surface</item>
        <item name="android:textColor">@color/secondary_container</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainButtonActionButtonFilled" parent="MainButtonActionButtonOutlined">
        <item name="android:textColor">@color/on_secondary_container</item>
        <item name="backgroundTint">@color/secondary_container</item>
        <item name="android:insetTop">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="cornerSize">@dimen/main_button_action_button_corner_size</item>
    </style>

    <style name="App.TextAppearance.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
    </style>

</resources>


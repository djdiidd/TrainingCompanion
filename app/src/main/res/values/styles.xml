<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.FloatingButton" parent="Widget.Material3.FloatingActionButton.Large.Surface">
        <item name="android:textSize">@dimen/start_dialog_inner_item_text_size</item>
        <item name="cornerSize">@dimen/start_dialog_inner_item_corner_size</item>
    </style>

    <style name="Widget.App.FloatingButton.WithEndDrawable">
        <item name="drawableTint">?attr/colorPrimary</item>
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="Widget.App.FloatingButton.WithEndDrawable.NoCorners">
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="BounceAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bounce</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="SliderStyle">
        <item name="thumbColor">@android:color/white</item>
        <item name="haloColor">@color/md_theme_secondary</item>
        <item name="haloRadius">14dp</item>
        <item name="thumbRadius">12dp</item>
        <item name="trackColorInactive">@color/md_theme_onPrimary</item>
        <item name="tickColorInactive">@color/md_theme_onPrimary</item>
        <item name="trackHeight">3dp</item>
    </style>

    <style name="SimpleOutlinedButton" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/timer_circle_progress</item>
    </style>

    <style name="StartWorkoutItemShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">36dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
    </style>

    <style name="StartWorkoutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/start_dialog_cardView_height</item>
        <item name="android:layout_marginRight">@dimen/start_dialog_item_margins</item>
        <item name="android:layout_marginLeft">@dimen/start_dialog_item_margins</item>
        <item name="android:layout_marginBottom">@dimen/start_dialog_item_margins</item>
        <item name="cardBackgroundColor">@color/md_theme_primaryContainer</item>
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearanceOverlay">@style/StartWorkoutItemShape</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="StartWorkoutItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/start_dialog_item_title_text_size</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DrawerLayoutInnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/md_theme_onSurface</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerLayoutInnerTitle" parent="DrawerLayoutInnerItem">
        <item name="android:layout_height">40dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down_24</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
</resources>


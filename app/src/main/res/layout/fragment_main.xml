<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/startButton"
            android:layout_width="235dp"
            android:layout_height="136dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:srcCompat="@drawable/start"
            android:layout_centerInParent="true"
            tools:visibility="gone" />

        <ProgressBar
            android:id="@+id/set_timer_progress"
            style="@style/CircularDeterminateProgressBar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="14dp"
            android:visibility="gone"
            tools:progress="90"
            tools:visibility="visible"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/set_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/set_timer_progress"
            android:layout_alignTop="@+id/set_timer_progress"
            android:layout_alignRight="@+id/set_timer_progress"
            android:layout_alignBottom="@+id/set_timer_progress"
            android:gravity="center"
            android:paddingBottom="17dp"
            android:shadowColor="@color/md_theme_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
            android:textColor="@color/digits_color"
            android:textSize="70sp"
            android:visibility="gone"
            app:fontFamily="@font/lato_black"
            tools:text="02:23"
            tools:visibility="visible"
            android:keepScreenOn="true"/>

        <Button style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:id="@+id/main_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:elevation="1dp"
            />

    </RelativeLayout>

</layout>
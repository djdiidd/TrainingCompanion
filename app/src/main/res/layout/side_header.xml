<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_nv_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:paddingTop="2dp"
        android:tint="@color/md_theme_onSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_change_workout_presets"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textSize="28sp"
        android:textColor="@color/md_theme_onSurface"
        app:layout_constraintBottom_toBottomOf="@+id/close_nv_button"
        app:layout_constraintEnd_toStartOf="@+id/close_nv_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/close_nv_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginTop="12dp"
        android:tint="@color/md_theme_onSurface"
        android:src="@drawable/ic_big_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/dialog_item_sound"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_with_sound" />

            <ImageView
                android:id="@+id/dialog_item_vibration"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_vibration" />

            <ImageView
                android:id="@+id/dialog_item_screen_anim"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_screen_glow" />
        </LinearLayout>

        <TextView
            android:id="@+id/break_note_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifying_screen_anim"
            android:layout_marginTop="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>


    </LinearLayout>

</layout>

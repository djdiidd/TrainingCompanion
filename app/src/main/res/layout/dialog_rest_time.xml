<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            style="@style/SliderStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_slider"
            android:stepSize="5.0"
            android:valueFrom="15.0"
            android:valueTo="240.0"
            android:value="60"
            app:trackHeight="3dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slider"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sub5s"
                style="@style/DialogButtonStyle"
                android:layout_width="68dp"
                android:layout_height="44dp"
                android:text="@string/dialog_rest_time_sub5"
                android:layout_marginStart="18dp"
                android:textColor="@color/dialog_button_color"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/selected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_rest_time"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add5s"
                style="@style/DialogButtonStyle"
                android:layout_width="68dp"
                android:layout_height="44dp"
                android:text="@string/dialog_rest_time_add5"
                android:textColor="@color/dialog_button_color"
                android:layout_marginEnd="18dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

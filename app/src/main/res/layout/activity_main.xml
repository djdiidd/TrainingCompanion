<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="@style/Widget.Material3.ActionBar.Solid"
                app:popupTheme="@style/ThemeOverlay.Material3.Toolbar.Surface">

                <LinearLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/general_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_time_start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/pause_resume_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:paddingTop="3dp"
                        app:srcCompat="@drawable/ic_pause" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/options_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:paddingTop="3dp"
                        app:srcCompat="@drawable/ic_options" />

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_surface"
                app:menu="@menu/bottom_menu" />

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sideNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/md_theme_surface"
            app:drawerLayoutCornerSize="30dp"
            app:headerLayout="@layout/side_header">

            <!-- Тело бокового меню -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="190dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Описание пунктов -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="@string/title_change_workout_settings"
                        android:textColor="@color/md_theme_onSurface" />

                    <!-- Выбор места тренировки -->
                    <TextView
                        android:id="@+id/side_menu_place"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:drawableStart="@drawable/ic_place_on_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_theme_onSurface"
                        android:gravity="center_vertical"
                        android:text="@string/workout_place"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="16sp" />

                    <!-- Динамичная вкладка для выбора нового места -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_dynamic_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">

                        <!-- Подпункт динамичного меню -->
                        <TextView
                            android:id="@+id/sub_menu_dynamic_place_home"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawableStart="@drawable/ic_home_24"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/md_theme_onSurface"
                            android:gravity="center_vertical"
                            android:text="@string/array_item_at_home"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Подпункт динамичного меню -->
                        <TextView
                            android:id="@+id/sub_menu_dynamic_place_gym"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:drawableStart="@drawable/ic_gym"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/md_theme_onSurface"
                            android:gravity="center_vertical"
                            android:text="@string/array_item_in_gym"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/sub_menu_dynamic_place_home" />

                        <!-- Подпункт динамичного меню -->
                        <TextView
                            android:id="@+id/sub_menu_dynamic_place_outdoors"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:drawableStart="@drawable/ic_outdoors"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/md_theme_onSurface"
                            android:gravity="center_vertical"
                            android:text="@string/array_item_outdoors"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/sub_menu_dynamic_place_gym" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Выбор частей тела -->
                    <TextView
                        android:id="@+id/side_menu_bodyparts"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:drawableStart="@drawable/ic_body_parts"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_theme_onSurface"
                        android:gravity="center_vertical"
                        android:text="@string/change_body_parts"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="16sp" />

                    <!-- Динамичная вкладка для редактирования тренеруемых мышц -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/side_menu_dynamic_body_parts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:visibility="gone" />

                    <!-- Выбор мышц -->
                    <TextView
                        android:id="@+id/side_menu_muscles"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:drawableStart="@drawable/ic_muscle"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_theme_onSurface"
                        android:gravity="center_vertical"
                        android:text="@string/change_muscles"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="16sp" />

                    <!-- Динамичная вкладка для редактирования тренеруемых мышц -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/side_menu_dynamic_muscles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:visibility="gone" />

                    <!-- Выбор времени -->
                    <TextView
                        android:id="@+id/side_menu_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:drawableStart="@drawable/ic_timer"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_theme_onSurface"
                        android:gravity="center_vertical"
                        android:text="@string/change_rest_time"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="16sp" />

                    <!-- Динамичная вкладка для редактирования времени отдыха -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_dynamic_rest_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sub5s"
                            style="@style/SimpleOutlinedButton"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:text="@string/dialog_rest_time_sub5"
                            app:layout_constraintBottom_toTopOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/side_menu_current_rest_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/md_theme_onSurface"
                            app:layout_constraintEnd_toStartOf="@+id/add5s"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/sub5s"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/add5s"
                            style="@style/SimpleOutlinedButton"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:text="@string/dialog_rest_time_add5"
                            app:layout_constraintBottom_toTopOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/side_menu_input_rest_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:hint="@string/side_menu_rest_time_hint"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="@+id/add5s"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/sub5s"
                            app:layout_constraintTop_toBottomOf="@+id/side_menu_current_rest_time" />

                        <ImageView
                            android:id="@+id/side_menu_rest_time_accept_button"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:src="@drawable/ic_done"
                            android:tint="?android:attr/colorControlNormal"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintTop_toBottomOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintVertical_bias="0.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="@string/title_additional_settings"
                        android:textColor="@color/md_theme_onSurface" />

                    <!-- Выбор уведомления пользователя -->
                    <TextView
                        android:id="@+id/side_menu_notification_mode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:drawableStart="@drawable/ic_notifying"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_theme_onSurface"
                        android:gravity="center_vertical"
                        android:text="@string/workout_set_notifying"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="16sp" />

                    <!-- Динамичная вкладка для выбора режима уведомления -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_dynamic_break_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">

                        <!-- Подпункт динамичного меню -->
                        <TextView
                            android:id="@+id/sub_menu_dynamic_sound"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:drawableStart="@drawable/ic_sound_outlined"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/md_theme_onSurface"
                            android:gravity="center_vertical"
                            android:text="@string/notifying_sd_with_sound"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Подпункт динамичного меню -->
                        <TextView
                            android:id="@+id/sub_menu_dynamic_vibration"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:drawableStart="@drawable/ic_vibration_outlined"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/md_theme_onSurface"
                            android:gravity="center_vertical"
                            android:text="@string/notifying_sd_vibration"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/sub_menu_dynamic_sound" />

                        <!-- Подпункт динамичного меню -->
                        <TextView
                            android:id="@+id/sub_menu_dynamic_anim"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:drawableStart="@drawable/ic_animation_outlined"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/md_theme_onSurface"
                            android:gravity="center_vertical"
                            android:text="@string/notifying_sd_screen_anim"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/sub_menu_dynamic_vibration" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="@string/title_other"
                        android:textColor="@color/md_theme_onSurface" />

                    <!-- Элемент, отвечающий за прекращение тренировки -->
                    <TextView
                        android:id="@+id/sub_menu_stop_stop_workout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:drawableStart="@drawable/stop_workout_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_theme_error"
                        android:gravity="center_vertical"
                        android:text="@string/stop_workout"
                        android:textColor="@color/md_theme_error"
                        android:textSize="16sp" />

                    <!-- Вкладка для подтверждения тренировки -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_stop_workout_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/toolbar_color"
                android:theme="@style/Widget.Material3.ActionBar.Solid"
                app:popupTheme="@style/ThemeOverlay.Material3.Toolbar.Surface">

                <LinearLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/general_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_time_start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/pause_resume_button"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:paddingTop="3dp"
                        app:srcCompat="@drawable/ic_pause" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/options_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/transparent"
                        android:paddingTop="3dp"
                        app:srcCompat="@drawable/ic_options" />

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/main_background">

            </FrameLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/main_color"
                app:itemTextColor="@color/white"
                app:menu="@menu/bottom_menu" />

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sideNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="@color/main_color"
            app:headerLayout="@layout/side_header">

            <!-- Тело бокового меню -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="190dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Описание пунктов -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="@string/title_change_workout_settings"
                        android:textColor="@color/side_menu_text_color" />

                    <!-- Выбор места тренировки -->
                    <LinearLayout
                        android:id="@+id/side_menu_place"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/side_menu_place_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_place_on_24" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_training_place"
                            android:textColor="@color/side_menu_text_color"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Динамичная вкладка для выбора нового места -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_dynamic_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">

                        <!-- Подпункт динамичного меню -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sub_menu_dynamic_place_home"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_home_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_toEndOf="@+id/imageView1"
                                android:text="@string/array_item_at_home"
                                android:textColor="@color/side_menu_text_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toEndOf="@+id/imageView1"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Подпункт динамичного меню -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sub_menu_dynamic_place_gym"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sub_menu_dynamic_place_home">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_gym"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:text="@string/array_item_in_gym"
                                android:textColor="@color/side_menu_text_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView2"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sub_menu_dynamic_place_outdoors"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_below="@+id/sub_menu_dynamic_place_gym"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sub_menu_dynamic_place_gym">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_outdoors"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/materialTextView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:text="@string/array_item_outdoors"
                                android:textColor="@color/side_menu_text_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintLeft_toLeftOf="@+id/imageView3"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Выбор частей тела -->
                    <LinearLayout
                        android:id="@+id/side_menu_bodyparts"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_body" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/change_body_parts"
                            android:textColor="@color/side_menu_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Динамичная вкладка для редактирования тренеруемых мышц -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/side_menu_dynamic_body_parts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:visibility="gone" />

                    <!-- Выбор мышц -->
                    <LinearLayout
                        android:id="@+id/side_menu_muscles"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_muscle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/change_muscles"
                            android:textColor="@color/side_menu_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Динамичная вкладка для редактирования тренеруемых мышц -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/side_menu_dynamic_muscles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:visibility="gone" />

                    <!-- Выбор времени -->
                    <LinearLayout
                        android:id="@+id/side_menu_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_clock" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/change_rest_time"
                            android:textColor="@color/side_menu_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Динамичная вкладка для редактирования времени отдыха -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_dynamic_rest_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sub5s"
                            style="@style/DialogButtonStyle"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:text="@string/dialog_rest_time_sub5"
                            android:textColor="@color/digits_color"
                            app:layout_constraintBottom_toTopOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:strokeColor="@color/slight" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/side_menu_current_rest_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/side_menu_text_color"
                            app:layout_constraintEnd_toStartOf="@+id/add5s"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/sub5s"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/add5s"
                            style="@style/DialogButtonStyle"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:text="@string/dialog_rest_time_add5"
                            android:textColor="@color/digits_color"
                            app:layout_constraintBottom_toTopOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:strokeColor="@color/slight" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/side_menu_input_rest_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:hint="@string/side_menu_rest_time_hint"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="@+id/add5s"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/sub5s"
                            app:layout_constraintTop_toBottomOf="@+id/side_menu_current_rest_time" />

                        <ImageView
                            android:id="@+id/side_menu_rest_time_accept_button"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:src="@drawable/ic_done_disabled"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintTop_toBottomOf="@+id/side_menu_input_rest_time"
                            app:layout_constraintVertical_bias="0.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/title_additional_settings"
                        android:textColor="@color/side_menu_text_color" />

                    <!-- Выбор уведомления пользователя -->
                    <LinearLayout
                        android:id="@+id/side_menu_notification_mode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_notification" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/workout_set_notifying"
                            android:textColor="@color/side_menu_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Динамичная вкладка для выбора режима уведомления -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/side_menu_dynamic_break_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:visibility="gone">

                        <!-- Подпункт динамичного меню -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sub_menu_dynamic_sound"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView01"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_with_sound"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/materialTextView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_toEndOf="@+id/imageView01"
                                android:text="@string/notifying_sd_with_sound"
                                android:textColor="@color/side_menu_text_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Подпункт динамичного меню -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sub_menu_dynamic_vibration"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_below="@+id/sub_menu_dynamic_sound"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sub_menu_dynamic_sound">

                            <ImageView
                                android:id="@+id/imageView02"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_vibration"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/materialTextView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_toEndOf="@+id/imageView02"
                                android:text="@string/notifying_sd_vibration"
                                android:textColor="@color/side_menu_text_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/imageView02"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sub_menu_dynamic_anim"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sub_menu_dynamic_vibration">

                            <ImageView
                                android:id="@+id/imageView03"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_screen_glow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_toEndOf="@+id/imageView03"
                                android:text="@string/notifying_sd_screen_anim"
                                android:textColor="@color/side_menu_text_color"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView03"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
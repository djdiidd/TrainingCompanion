<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item> <!-- Задняя статичная часть -->
        <shape
            android:innerRadius="106dp"
            android:shape="ring"
            android:thickness="16dp"
            android:useLevel="true">
            <solid android:color="@color/md_theme_onSurface" />
        </shape>
    </item>

    <item> <!-- Передняя динамичная часть -->
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:innerRadius="106dp"
                android:shape="ring"
                android:thickness="16dp"
                android:useLevel="false">
                <solid android:color="@color/md_theme_secondaryContainer" />
            </shape>
        </rotate>
    </item>

    <!-- Закругление на верхнем статическом конце -->
    <item android:bottom="228dp">
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="8dp"
            android:useLevel="false">
            <solid android:color="@color/md_theme_secondaryContainer" />
        </shape>
    </item>

    <!-- Закругление на верхнем динамичном конце -->
    <item>
        <rotate>
            <inset android:insetBottom="228dp">
                <shape
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thickness="8dp"
                    android:useLevel="false">
                    <solid android:color="@color/md_theme_secondaryContainer" />
                </shape>
            </inset>
        </rotate>
    </item>

</layer-list>